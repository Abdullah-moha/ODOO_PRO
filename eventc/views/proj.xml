<?xml version="1.0" encoding ="UTF-8" ?>
<odoo>
    <data>
       
        <record id="proj_view_tree" model="ir.ui.view">
            <field name="name">proj view tree</field>
            <field name="model">tagp</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="color" widget="color_picker"/>
                </list>
            </field>
            
        </record>        
        <record id="proj_view_form" model="ir.ui.view">
            <field name="name">proj view form</field>
            <field name="model">tagp</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="color" widget="color_picker"/>
                        </group>
                    </sheet>
                </form>   
            </field>
        </record>

        <record id="proj_action" model="ir.actions.act_window">
            <field name="name">Projection equipment</field>
            <field name="res_model">tagp</field>
            <field name="view_mode">list,form</field>         
        </record>

        <menuitem
            id="proj_m"
            name="Projection equi"
            parent="orgainzer_menu"
            action="proj_action"
        />
          
    </data>
</odoo>
